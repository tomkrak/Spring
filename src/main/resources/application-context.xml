<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="someBean" class="pl.sda.spring.SomeBean" scope="prototype">
        <property name="title" value="First Bean"></property>
    </bean>

    <bean id="someBeanTwo" class="pl.sda.spring.SomeBean2">
        <constructor-arg name="title" value="Second bean"/>
        <constructor-arg name="list">
            <list>
                <value>Test Value 1</value>
                <value>Test Value 2</value>
            </list>
        </constructor-arg>
    </bean>

    <bean id="someBeanThree" class="pl.sda.spring.SomeBean3">
        <constructor-arg name="someBean2" ref="someBeanTwo"/>
    </bean>


</beans>